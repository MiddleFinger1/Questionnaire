<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="#00838F"
        app:cardCornerRadius="20dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="10dp">


        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="40dp" android:id="@+id/Settings.Title" android:padding="10dp"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/Settings.Privacy" android:layout_marginEnd="0dp"
                android:textColor="#FFFFFF" android:textAlignment="center" android:textSize="18sp"
                android:fontFamily="@font/ubuntu_medium"/>
        <ImageView
                android:layout_height="44dp" app:srcCompat="@android:drawable/btn_dialog"
                android:id="@+id/Settings.Privacy" android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" android:layout_width="44dp" android:layout_marginEnd="5dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Settings.Group"
                android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
                android:textColor="#FFFFFF" android:textAlignment="textStart" android:fontFamily="@font/ubuntu_light"
                android:textSize="14sp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Settings.Mark"
                android:layout_alignParentBottom="true" android:layout_alignParentEnd="true"
                android:textColor="#FFFFFF" android:fontFamily="@font/ubuntu_light" android:textAlignment="textEnd"
                android:textSize="14sp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>