<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        tools:context="com.questionnaire.constructor.ConstructorActivity">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/Constructor.appbar"
            android:fitsSystemWindows="true"
            android:background="#ACACAC"
            android:layout_height="300dp"
            android:layout_width="match_parent">
        <android.support.design.widget.CollapsingToolbarLayout
                app:contentScrim="#FFFFFF"
                app:title="Constructor"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleMarginBottom="30dp">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:fitsSystemWindows="true"
                    android:background="@drawable/ic_launcher_background"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar
                    android:id="@+id/Constructor.toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:titleTextColor="#000000"
                    app:layout_collapseMode="parallax"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp">
            <TextView
                    android:text="Fill fields mentioned down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ACACAC"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntu_light"/>
            <android.support.design.widget.TextInputLayout
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemThemeTextView"
                    android:hint="Name"
                    android:textColorHint="#000000"
                    app:helperTextTextAppearance="@style/TextAppearance.AppCompat.Small">
                <android.support.design.widget.TextInputEditText
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textColorLink="@color/colorPrimary"
                        android:textColor="#000000"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textColorHint="#000000"
                        android:inputType="text"
                        android:fontFamily="@font/ubuntu_medium"
                        android:id="@+id/Constructor.Name"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                    android:text="State:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#ACACAC"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/ubuntu_light"/>
            <android.support.design.widget.TextInputLayout
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemThemeTextView"
                    android:hint="Group"
                    android:textColorHint="#000000">
                <android.support.design.widget.TextInputEditText
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textColorLink="@color/colorPrimary"
                        android:textColor="#000000"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textColorHint="#000000"
                        android:inputType="text"
                        android:fontFamily="@font/ubuntu_medium"
                        android:id="@+id/Constructor.Group"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:elevation="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ItemThemeTextView"
                    android:hint="Description"
                    android:textColorHint="#000000">
                <android.support.design.widget.TextInputEditText
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:textColorLink="@color/colorPrimary"
                        android:textColor="#000000"
                        android:textCursorDrawable="@color/colorPrimary"
                        android:textColorHint="#000000"
                        android:inputType="text"
                        android:fontFamily="@font/ubuntu_medium"
                        android:id="@+id/Constructor.Description"
                        android:minLines="4"
                        android:lines="4"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                    android:text="Show answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    style="@style/ItemThemeTextView"/>
            <CheckBox
                    android:text="Set anonymous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox2"
                    style="@style/ItemThemeTextView"/>
            <CheckBox
                    android:text="Set random appear questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox3"
                    style="@style/ItemThemeTextView"/>
            <CheckBox
                    android:text="Set private access"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox4"
                    style="@style/ItemThemeTextView"/>
            <Button
                    android:text="Add question"
                    android:layout_width="match_parent"
                    android:id="@+id/Constructor.AddQuestion"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textAllCaps="false"
                    android:background="#FFFFFF"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:layout_margin="10dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Constructor.LayoutQuestions">
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_anchor="@id/Constructor.appbar"
            app:layout_anchorGravity="center_vertical|end"
            app:backgroundTint="#F9A825"
            android:src="@drawable/ic_add_black_48dp"
            android:id="@+id/Constructor.FABAddImage"
            android:elevation="5dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_anchor="@id/Constructor.appbar"
            app:layout_anchorGravity="bottom|end"
            app:backgroundTint="#ACACAC"
            android:src="@drawable/ic_exit_to_app_black_48dp"
            android:id="@+id/Constructor.FABExit"
            android:elevation="5dp"/>
</android.support.design.widget.CoordinatorLayout>