<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="#FFFFFF">
    <TextView
            android:layout_alignParentTop="true"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DialogAlert.Title"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textAlignment="center"
            android:elevation="8dp"
            android:padding="10dp"
            android:background="#FFFFFF"/>
    <TextView
            android:layout_below="@id/DialogAlert.Title"
            android:layout_above="@id/DialogAlert.ButtonsGroup"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DialogAlert.Description"
            android:textColor="#ACACAC"
            android:fontFamily="@font/ubuntu_light"
            android:padding="10dp" android:gravity="center" android:textSize="18sp"
    />
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/DialogAlert.ButtonsGroup">
    </LinearLayout>
</RelativeLayout>