<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context="com.ui.start.SignUpFragment" android:background="#FFFFFF">


    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:elevation="8dp"
            app:title="Sign up account"
            app:navigationIcon="@drawable/svg_arrow_left_48dp" android:id="@+id/Start.SignUpToolbar"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_centerVertical="true">
        <ImageView
                android:src="@drawable/ic_account_box_black_48dp"
                android:layout_width="200dp"
                android:layout_height="200dp" android:id="@+id/Start.LogoUser" android:layout_gravity="center_horizontal"/>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textColorHint="#000000" style="@style/ItemThemeTextView">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email" android:fontFamily="@font/ubuntu_light" android:id="@+id/Start.SignUpEmail"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textColorHint="#000000" style="@style/ItemThemeTextView">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password" android:fontFamily="@font/ubuntu_light"
                    android:id="@+id/Start.SignUpPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:textColorHint="#000000" style="@style/ItemThemeTextView">

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Login" android:fontFamily="@font/ubuntu_light" android:id="@+id/Start.SignUpLogin"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <Button
            android:text="Sign up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/Start.CreateUser" android:layout_alignParentBottom="true"
            style="@style/ItemThemeTextView" android:textAllCaps="false"/>
</RelativeLayout>
