<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.questionnaire.ui.QuestionSession"
        android:background="#FFFFFF">
    <android.support.v7.widget.Toolbar
            android:id="@+id/Question.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="#FFFFFF"
            app:titleTextColor="#000000"
            android:elevation="8dp"/>
    <ScrollView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Question.Toolbar">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Question.Image"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Question.Question"
                    android:text="@string/the_question"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_below="@id/Question.Image"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:fontFamily="@font/ubuntu_medium"/>
            <TextView
                    android:text="@string/desription_to_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Question.Description"
                    android:textSize="18sp"
                    android:layout_below="@id/Question.Question"
                    android:textColor="#000000"
                    android:fontFamily="@font/ubuntu_light"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Question.Statements"
                    android:layout_below="@id/Question.Description"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">
            </LinearLayout>
            <Button
                    android:text="@string/exit_questionnaire"
                    android:layout_width="70dp"
                    android:id="@+id/Question.Exit"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/Question.Statements"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:shadowColor="#FFFFFF"
                    android:fontFamily="@font/ubuntu_medium" android:elevation="5dp"/>
            <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Question.Back"
                    android:text="@string/back_question"
                    android:layout_below="@id/Question.Statements"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:shadowColor="#FFFFFF"
                    android:fontFamily="@font/ubuntu_medium" android:elevation="5dp"/>
            <Button
                    android:text="@string/next_question"
                    android:layout_width="70dp"
                    android:id="@+id/Question.Next"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Question.Statements"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:background="#FFFFFF"
                    android:shadowColor="#FFFFFF"
                    android:fontFamily="@font/ubuntu_medium" android:elevation="5dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
