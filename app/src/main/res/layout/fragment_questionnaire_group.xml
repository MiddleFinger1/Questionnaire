<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.questionnaire.ui.QuestionnaireGroup">
    <android.support.v7.widget.Toolbar
            android:theme="@style/Theme.AppCompat.Light"
            android:id="@+id/Group.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="top"
            android:background="#FFFFFF"
            app:title="@string/app_name"
            app:layout_collapseMode="parallax"
            app:titleTextColor="#000000"
            android:elevation="8dp"
            android:fitsSystemWindows="true"
            app:navigationIcon="@drawable/ic_exit_to_app_black_36dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/Group.recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_below="@id/Group.Toolbar"/>
</RelativeLayout>
